# ==================== 上游服务定义 ====================
# 说明：你的架构中只有一个处理HTTP请求的服务（前端 + API），监听8080端口。
# 本文件应该放在/etc/nginx/sites-available 
upstream app_servers {
    server 127.0.0.1:8080;
    # 可在此添加更多实例以实现负载均衡
}

# ==================== 主服务器配置 ====================
server {
    listen 80;
    # 新配置（同时匹配192.168.126.128、127.0.0.1、localhost）
    server_name 192.168.126.128 127.0.0.1 localhost; # 你的服务器IP
    server_tokens off;
    charset utf-8;

    # 基础路径：所有静态文件的根目录
    root /home/jym/code/cpp/personal-project/gw-server/server/bin/web;
    index index.html;
    
    # ========== 添加这一行 ==========
    client_max_body_size 100M;  # 设置最大请求体大小为100MB

    # ========== GZIP 压缩配置 ==========
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_comp_level 2;
    gzip_proxied any;
    gzip_types
        text/plain text/css text/javascript application/javascript
        application/json application/xml application/xml+rss
        image/svg+xml image/jpeg image/png image/gif image/webp;

    # ========== 位置块定义 ==========

    # 1. 上传目录（图片） - 最高优先级，Nginx直接提供
    location /uploads/ {
        alias /home/jym/code/cpp/personal-project/gw-server/server/bin/web/uploads/;
        expires max;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    # ========== Agent智能助手服务代理 ==========
    location /agent/ {
        # 将 /agent/ 路径下的所有请求转发到 Python Agent 服务 (8000端口)
        proxy_pass http://127.0.0.1:8000/; # 注意结尾的 `/` 很重要，它会将 /agent/xxx 映射到 :8000/xxx
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 增加超时时间，因为LLM处理可能需要更久
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 300s; # 对于大模型响应，可能需要较长的读取时间
    }

    # 2. 其他静态资源（CSS, JS, 字体，图片） - 正则匹配，Nginx直接提供
    location ~* \.(?:css|js|woff2?|ttf|eot|jpg|jpeg|png|gif|ico|webp|svg)$ {
        expires 30d;
        add_header Cache-Control "public";
        try_files $uri =404;
    }

    # 3. 核心配置：所有其他请求（包括首页 /、API /api/*、上传 /upload）都代理到HTTP应用服务器
    location / {
        proxy_pass http://app_servers;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        # 对于可能需要WebSocket的路径
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_connect_timeout 30s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # ========== 错误页面 ==========
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
    location = /404.html { internal; }
    location = /50x.html { root /usr/share/nginx/html; }
}
