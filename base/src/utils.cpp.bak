char* ComputeBufferMd5(unsigned char* pBuffer, int Length)
{
    unsigned char md5[MD5_DIGEST_LENGTH];
    MD5(pBuffer, Length, md5);
    static char md5_str[MD5_DIGEST_LENGTH * 2 + 1];
    for(int i = 0; i < MD5_DIGEST_LENGTH; i++)
    {
        sprintf(md5_str + i * 2, "%02x", md5[i]);
    }
    return md5_str;
}

void measure_time_func(std::function<void(void)> func, const char* Information)
{
    auto start = std::chrono::high_resolution_clock::now();
    func();
    auto end = std::chrono::high_resolution_clock::now();
    std::chrono::duration<double, std::milli> duration = end - start;
    std::cout << Information << " cost " << duration.count() << " ms" << std::endl;
}

void mv_sleep(int time)
{
    usleep(time * 1000);
}

void get_local_time() {
    time_t rawtime;
    struct tm * timeinfo;
    char buffer[80];

    time (&rawtime);
    timeinfo = localtime (&rawtime);

    strftime(buffer, sizeof(buffer), "%d-%m-%Y %H:%M:%S", timeinfo);
    std::string str(buffer);
    std::cout << str << std::endl;
}

int SaveFile(const char *filename, unsigned char* pBuffer, size_t length) {
    FILE *fp = fopen(filename, "ab+");
    if (fp == NULL) {
        printf("open file failed\n");
        return -1;
    }
    fwrite(pBuffer, 1, length, fp);
    fclose(fp);
    return 0;
}

